<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
    {% endblock %}
</head>
<body>
<div class="container">
    <header>
        <div class="header-top">
            <div class="logo"><a href="/"><img src="/images/header-logo.svg" alt="Symfony"> </a></div>
            <div><a href="/">Главная</a></div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% if is_granted('ROLE_ADMIN') %}
                    <div><a href="/admin">Админка</a></div>
                {% else %}
                    <div><a href="/profile">Профиль</a></div>
                {% endif %}
                <div>Вы вошли как {{ app.user.username }}</div>
                <div><a href="/logout">Выйти</a></div>
            {% else %}
                <div><a href="/login">Войти</a></div>
                <div><a href="/register">Регистрация</a></div>
            {% endif %}
        </div>
    </header>
    <div class="block-content">

        {% block body %} {% endblock %}
    </div>
    {% block javascripts %}
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
</div>
</body>
</html>